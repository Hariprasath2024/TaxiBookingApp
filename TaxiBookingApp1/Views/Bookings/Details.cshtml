@model TaxiBookingApp1.Models.Booking

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Booking Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.CustomerName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CustomerName)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.DriverName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DriverName)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.PickupLocation)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.PickupLocation)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.DropoffLocation)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DropoffLocation)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.BookingTime)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.BookingTime)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Status)
            </dd>
        </dl>
    </div>
    <div class="card-footer text-center">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.BookingID">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
